{
	"coc.preferences.snippetStatusText": "â“ˆ ",
	"coc.preferences.formatOnSaveFiletypes": [
		"json",
		"jsonc",
		"python"
	],
	"snippets.extends": {
		"cpp": [
			"c"
		]
	},
	"snippets.ultisnips.directories": [
		"$HOME/.config/nvim/snippets/"
	],
	"snippets.snipmate.author": "stanleyguo0207",
	"python.pythonPath": "python3",
	"json.format.enable": true,
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": [
				"c",
				"cc",
				"cpp",
				"c++",
				"objc",
				"objcpp"
			],
			"rootPatterns": [
				".ccls",
				"compile_commands.json",
				".git/",
				".hg/"
			],
			"initializationOptions": {
				"cache": {
					"directory": "/tmp/ccls"
				},
				"clang": {
					"extraArgs": [
						"-std=c++2a",
						"-Wformat=2",
						"-Wall",
						"-Wextra",
						"-pedantic",
						"-Wconversion",
						"-Wundef",
						"-Wdeprecated",
						"-Wweak",
						"-vtables",
						"-Wshadow",
						"-Wno-gnu-zero-variadic-macro-arguments",
						"-Wzero-as-null-pointer-constant",
						"-Werror"
					]
				},
				"highlight": {
					"lsRanges": true
				}
			}
		},
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			],
			"ignoredRootPaths": []
		},
		"cmake": {
			"command": "cmake-language-server",
			"filetypes": [
				"cmake"
			],
			"rootPatterns": [
				"build/"
			],
			"initializationOptions": {
				"buildDirectory": "build"
			}
		}
	}
}
